<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MechanismLink1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8093f1"
    tools:context=".MechanismActivity">

    <TextView
        android:layout_width="360dp"
        android:layout_height="49dp"
        android:background="#2d00f7"
        android:paddingLeft="10dp"
        android:text="@string/why_do_we_have_fever"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.652"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.422" />

    <TextView
        android:id="@+id/MechanismTitle"
        android:layout_width="398dp"
        android:layout_height="53dp"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:text="@string/useful_links_about_fever"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#2d00f7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.193" />
</androidx.constraintlayout.widget.ConstraintLayout>