<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LogActivity">

    <View
        android:id="@+id/LogBackbgrround"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffb8d1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/LogTitle"
        android:layout_width="353dp"
        android:layout_height="95dp"
        android:background="#00D81159"
        android:paddingLeft="35dp"
        android:text="@string/please_log_your_temperature_today"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#f20089"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.193" />

    <EditText
        android:id="@+id/LogInputData"
        android:layout_width="309dp"
        android:layout_height="53dp"
        android:background="#ffffff"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.404" />

    <Button
        android:id="@+id/LogSaveButton"
        android:layout_width="117dp"
        android:layout_height="76dp"
        android:background="#bdb2ff"
        android:text="@string/save"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#2d00f7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.609" />

</androidx.constraintlayout.widget.ConstraintLayout>